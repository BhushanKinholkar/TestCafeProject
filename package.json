  "main": "index.js",
  "scripts": {
    "clearreport":"npm run allure:clear",
    "test:chrome": "testcafe chrome ./tests/file.test.js -s takeOnFails = true --disable-page-caching --reporter allure",
    "test:chrome:headless": "testcafe chrome:headless ./tests",
    "test:chrome:mobile": "testcafe chrome:emulation:device=iphone X ./tests",
    "test:firefox": "testcafe firefox ./tests",
    "test:report":"allure generate allure/allure-results --clean -o allure/allure-report && allure open allure/allure-report"
    
   

  },
